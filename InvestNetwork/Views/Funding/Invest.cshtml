@{
    ViewBag.Title = "Инвестирование";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@section Header{
    <div class="page_title">
        <div class="container">
            <div class="title">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
}

<div class="content_fullwidth">
    <div class="one_full">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false)
            <fieldset>
                <div class="accrodation">
                    <h2>Вам нужно оплатить, <strong>30000 р.</strong></h2>

                    <div class="punchline_text_box">

                        <div class="join_row">
                            <div class="join_label"><strong>@Html.Label("Номер карты")</strong></div>
                            <div class="join_element">
                                @Html.Editor("cardNumber")
                            </div>
                        </div>

                        <div class="join_row">
                            <div class="join_label"><strong>@Html.Label("CVV/CVC:")</strong></div>
                            <div class="join_element">
                                @Html.Editor("CVV")
                            </div>
                        </div>

                        <div class="join_row">
                            <div class="join_label"><strong>@Html.Label("Срок действия (ММ/ГГ):")</strong></div>
                            <div class="join_element">
                                <select name="nbx_month_start" id="nbx_month_start" style="margin-right: 2px;">
                                    <option value="0">MM</option>
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select><select name="nbx_year_start" id="nbx_year_start">
                                    <option value="0">ГГ</option>
                                    <option value="00">00</option>
                                    <option value="01">01</option>
                                    <option value="02">02</option>
                                    <option value="03">03</option>
                                    <option value="04">04</option>
                                    <option value="05">05</option>
                                    <option value="06">06</option>
                                    <option value="07">07</option>
                                    <option value="08">08</option>
                                    <option value="09">09</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                        </div>

                        <div class="join_row">
                            <div class="join_label"><strong>@Html.Label("Владелец (как на карте):")</strong></div>
                            <div class="join_element">
                                @Html.Editor("cardcholder")
                            </div>
                        </div>

                        <div class="clearfix mar_top3"></div>

                        <div class="join_row">
                            <input type="submit" value="Оплатить" />
                        </div>

                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

