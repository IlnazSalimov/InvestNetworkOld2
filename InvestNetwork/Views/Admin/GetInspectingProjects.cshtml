@using InvestNetwork.Application.Core;
@using InvestNetwork.Core;
@model IEnumerable<Project>

@{
    ViewBag.Title = "Обзор проектов";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@section Styles{
}

@section Header{
    <div class="page_title">
        <div class="container">
            <div class="title">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
}

<div class="content_fullwidth">
    <div class="our_team_box_big">
        <h2>Проекты  <strong>на осмотр</strong></h2>
        @{var i = 0;}
        @foreach (Project p in Model)
        {
            i++;
            <div class="one_fourth @(i % 4 == 0 ? "last" : String.Empty)">
                <div class="cont-area">
                    @Html.ProjectImage(p.ID, true, true, 210, 230, new { @class = "teammempic" })
                    <ul>
                        <li><strong>@Html.ActionLink(p.Name, "ReviewProject", "Admin", new { Id = p.ProjectID }, new { @class = "project_name" })&nbsp<i>от автора&nbsp&nbsp<span class="author-name">@p.AuthorFullName</span></i></strong></li>
                        <li><a href="#"><i class="icon-facebook icon-large"></i></a></li>
                        <li><a href="#"><i class="icon-twitter icon-large"></i></a></li>
                        <li><a href="#"><i class="icon-google-plus icon-large"></i></a></li>
                        <li><a href="#"><i class="icon-linkedin icon-large"></i></a></li>
                        <li><a href="#"><i class="icon-pinterest icon-large"></i></a></li>
                    </ul>
                </div>
                <p>@p.ShortDescription</p>
            </div>
            if (i % 4 == 0)
            {
            <div class="clearfix mar_top5"></div>
            }
        }

        @if (Model.Count() == 0)
        {
            <div class="info">
                <div class="message-box-wrap">
                    На данный момент проектов ожидающих проверку нет.
                </div>
            </div>
        }
    </div>
</div>
<div class="clearfix mar_top5"></div>

@section Scripts{
}