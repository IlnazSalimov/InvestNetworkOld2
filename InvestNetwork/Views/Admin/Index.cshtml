@using InvestNetwork.Core;
@using InvestNetwork.Application.Core;

@{
    ViewBag.Title = "Обзор проектов";
    Layout = "~/Views/Layouts/_Layout.cshtml";
}

@section Header{
    <div class="page_title">
        <div class="container">
            <div class="title">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
}

<div class="content_left">

    <h2>Проекты</h2>
    @{int i = 0; }
    @foreach (Project p in ViewBag.Projects as IEnumerable<Project>)
    {
        i++;
        <div class="one_half @(i % 2 == 0 ? "last" : String.Empty)">
            <div class="portfolio_image">
                @Html.ProjectImage(p.ID, true, true, 680, 400)
                <div class="title">@p.Name</div>
            </div>
        </div>
    <!-- end section -->

    }
    <div class="clearfix mar_top4"></div>
</div>

<div class="right_sidebar">

    <div class="sidebar_widget">
        <div class="sidebar_title">
            <h3><i>Панель</i> Управления</h3>
        </div>
        <ul class="arrows_list1">
            <li><a href="@Url.Action("GetAllProjects", "Admin")"><i class="icon-angle-right"></i> Все проекты</a></li>
            <li><a href="@Url.Action("GetInspectingProjects", "Admin")"><i class="icon-angle-right"></i> Проекты ожидающие проверку</a></li>
            <li><a href="#"><i class="icon-angle-right"></i> Пользователи</a></li>
        </ul>
    </div>
    <!-- end section -->

    <div class="clearfix mar_top3"></div>

    <div class="sidebar_widget">

        <div class="sidebar_title">
            <h3><i>Последние</i> Проекты</h3>
        </div>

        <ul class="recent_posts_list">
            @foreach (Project p in ViewBag.RecentProjects as IEnumerable<Project>)
            {
                <li>
                    <span>
                        <a href="#">
                            <img src="@(p.LinkToImg + "@50x50sc")" alt="">
                        </a>
                    </span>
                    <a href="@Url.Action("ReviewProject", new { Id = p.ProjectID })">@p.Name</a>
                    <i>@p.CreateDate.ToString("MMMM d, yyyy")</i>
                </li>
            }

        </ul>

    </div>
    <!-- end section -->

    <div class="clearfix mar_top3"></div>

</div>
<div class="clearfix mar_top4"></div>

@section Scripts{
}
